<% provide(:title, "Sign in") %>
<h1>Sign in!</h1>


<%= form_for(:session, url: sessions_path, :html => {:class => "form-group"}) do |f| %>
  

  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "Sign in!", class: "btn btn-primary" %>
  </div>

  <p><%= link_to "Create new user", signup_path %></p>
<% end %>
